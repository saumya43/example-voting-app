pipeline{
    agent any

    tools{
    nodejs 'NodeJS 8.9.0'
    }

    stages{
        stage('build'){
          when{
             changeset "**/worker/**"

      }

            steps{
             echo 'compiling result app'
             dir('result'){
                sh 'npm install'
             }
            }

        }
        stage('test'){
            when{
              changeset "**/worker/**"

      }

            steps{
             echo 'running unit tests on result app'
             dir('result'){
             sh 'npm install'
             sh 'npm test'
             }
            }
        }

        }
    }
