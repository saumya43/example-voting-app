pipeline{
    agent {
    docker {
        image 'node:8.13.0-alpine'
      
    }
    }

    stages{
        stage('build'){
          when{
             changeset "**/worker/**"

      }

            steps{
             echo 'compiling result app'
             dir('result'){
                sh 'npm install'
             }
            }

        }
        stage('test'){
            when{
              changeset "**/worker/**"

      }

            steps{
             echo 'running unit tests on result app'
             dir('result'){
             sh 'npm install'
             sh 'npm test'
             }
            }
        }

        }
    }
